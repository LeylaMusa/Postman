			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response body is an array\", function () {\r",
							"    pm.expect(pm.response.json()).to.be.an('array');\r",
							"});\r",
							"pm.test(\"Response body is not empty\", function () {\r",
							"    pm.expect(pm.response.json()).to.not.be.empty;\r",
							"});\r",
							"let myArray=pm.response.json().map((el)=>{\r",
							"   return el.id\r",
							"})\r",
							"function random_item(items) {\r",
							"    return items[Math.floor(Math.random() * items.length)];\r",
							"}\r",
							"\r",
							"let randomBookid= random_item(myArray);\r",
							"pm.environment.set(\"randomBookid\",randomBookid)\r",
							"\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript",
